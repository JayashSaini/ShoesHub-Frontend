{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/login", "destination": "/index.html" },
    { "source": "/register", "destination": "/index.html" },
    { "source": "/forgot-password", "destination": "/index.html" },
    { "source": "/reset-password/:token", "destination": "/index.html" },
    { "source": "/email-verification", "destination": "/index.html" },
    { "source": "/email-verification/:token", "destination": "/index.html" },
    { "source": "/error", "destination": "/index.html" },
    {
      "source": "/user/:accessToken/:refreshToken",
      "destination": "/index.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "https://shoeshubbackend.onrender.com/api/$1"
    }
  ]
}
